<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Shadow Data</title>
    <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding: 20px;
        }

        table {
            width: 100%;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="mb-4">{{.Device.Name}}</h1>
    <a href="/ui/">返回首页</a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>点位名</th>
            <th>描述</th>
            <th>读写</th>
            <th>点位值</th>
            <th>更新时间</th>
            <th>控制</th>
        </tr>
        </thead>
        <tbody>
        {{range $index,$point:=.Points}}
            <tr>
                <td> {{.Name}}</td>
                <td>{{.ReadWrite}}</td>
                <td> {{.Description}}</td>
                <td>
                    {{.Value}} {{.Units}}
                    {{if .Enums}}
                        {{range .Enums}}
                            {{if eq $point.Value .Value}}
                                ,{{.Name}}
                            {{end}}
                        {{end}}
                    {{end}}
                </td>
                <td>{{.Update}}</td>
                <td>
                    {{if .Writeable}}
                        <form action="/ui/device/{{$.Device.ID}}/point/{{.Name}}/set" method="post">

                            {{if .Enums}}
                                {{range .Enums}}
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="value" id="{{.Value}}"
                                               value="{{.Value}}" {{if eq $point.Value .Value}}checked{{end}}>
                                        <label class="form-check-label" for="{{.Value}}">{{.Name}}</label>
                                    </div>
                                {{end}}
                            {{else}}
                                <input type="text" name="value" class="form-control"
                                       style="width: 100px; display: inline-block;">
                            {{end}}

                            <button type="submit" class="btn btn-primary">提交</button>
                        </form>
                    {{else}}
                        -
                    {{end}}
                </td>
                <td></td>
            </tr>
        {{end}}
        </tbody>
    </table>
</div>
</body>
</html>
